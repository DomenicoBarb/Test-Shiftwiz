<section class="pt-20  max-[425px]:pt-4 max-[425px]:mx-0 mx-10 w-full">

    <fieldSet class="border border-black flex m-10 rounded-lg p-4 justify-around">
        <p class="text-black  w-[33%]">{{profile.employee.first_name}} {{profile.employee.last_name}}</p>
        <legend class="text-black font-semibold text-xl">Name</legend>
        <div class="flex flex-col m-2 ml-6 rounded-xl gap-4 p-0 bg-slate-100">
            

    </fieldSet>

    <fieldSet class="border border-black flex m-10 rounded-lg p-4 justify-around">
        <p class="text-black  w-[33%]">{{profile.username}}</p>
        <legend class="text-black font-semibold text-xl">Username</legend>
        <div class="flex flex-col m-2 ml-6 rounded-xl gap-4 p-0 bg-slate-100">

    </fieldSet>

    <fieldSet class="border border-black flex m-10 rounded-lg p-4 justify-around">
        <p class="text-black  w-[33%]">{{profile.email}}</p>
        <legend class="text-black font-semibold text-xl">Email</legend>
        <div class="flex flex-col m-2 ml-6 rounded-xl gap-4 p-0 bg-slate-100">

    </fieldSet>
    
    <fieldSet class="border border-black flex m-10 rounded-lg p-4 max-[425px]:p-0 justify-around">

        <legend class="text-black font-semibold text-xl">Availability</legend>
        <div class="flex flex-col m-2 ml-6 max-[425px]:m-0 rounded-xl gap-4 p-0 bg-slate-100 w-[60%] max-[425px]:w-[95%] max-[425px]:mt-2">
            <div class="flex justify-between p-4 border-b-4 border-white">
                <p class="text-black w-[33%]">Day</p>
                 <p class="text-black w-[33%] text-center">Status</p>
            </div>
            <div class="flex justify-between px-2">
                <p class="text-black w-[33%]">Monday</p>
                {{#profileAvailCheck profile.employee.works_monday}}{{/profileAvailCheck}}
            </div>
            <div class="flex justify-between px-2">
                <p class="text-black  w-[33%]">Tuesday</p>
                {{#profileAvailCheck profile.employee.works_tuesday}}{{/profileAvailCheck}}
            </div>
            <div class="flex justify-between px-2">
                <p class="text-black  w-[33%]">Wednesday</p>
                {{#profileAvailCheck profile.employee.works_wednesday}}{{/profileAvailCheck}}
            </div>
            <div class="flex justify-between px-2">
                <p class="text-black  w-[33%]">Thursday</p>
                {{#profileAvailCheck profile.employee.works_thursday}}{{/profileAvailCheck}}
            </div>
            <div class="flex justify-between px-2">
                <p class="text-black  w-[33%]">Friday</p>
                {{#profileAvailCheck profile.employee.works_friday}}{{/profileAvailCheck}}
            </div>
            <div class="flex justify-between px-2">
                <p class="text-black  w-[33%]">Saturday</p>
                {{#profileAvailCheck profile.employee.works_saturday}}{{/profileAvailCheck}}
            </div>
            <div class="flex justify-between px-2 pb-4">
                <p class="text-black  w-[33%]">Sunday</p>
                {{#profileAvailCheck profile.employee.works_sunday}}{{/profileAvailCheck}}
            </div>




    </fieldSet>
</section>

